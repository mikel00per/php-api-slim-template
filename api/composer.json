{
    "name": "mikelooper/api-slim-template",
    "description": "Skeleton using Slim php",
    "keywords": ["template"],
    "homepage": "https://github.com/mikel00per/skeleton-slim",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "ApiSlimTemplate\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Miguel Morillo",
            "email": "miguelmwilliams@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "mikelooper/ddd-cqrs": "^0.0.2",
        "mikelooper/slim-microservice": "^0.0.6"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.4.0",
        "squizlabs/php_codesniffer": "^3.7",
        "vimeo/psalm": "^5.15"
    },
    "scripts": {
        "test": [
            "@analyze",
            "@test:unit"
        ],
        "lint:fix": "phpcbf",
        "test:unit":  "phpunit --configuration phpunit.xml --no-coverage",
        "test:coverage": "phpunit --configuration phpunit.xml --coverage-html tmp/phpunit/coverage",
        "analyze": [
            "@phpcs",
            "@psalm"
        ],
        "phpcs": "phpcs",
        "psalm": "psalm"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
